// To print the reverse of the number taken as input

#include <iostream>
using namespace std;

int main() {
    int num, reversed = 0;
    cout << "Enter a number: ";
    cin >> num;

    while (num != 0) {
        int digit = num % 10;             
        reversed = reversed * 10 + digit; 
         num = num / 10;         
    }

    cout << "Reversed number: " << reversed << endl;
    return 0;
}



RESULT :

INPUT : 45768
OUTPUT : 86754
